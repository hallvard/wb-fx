<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import org.controlsfx.control.tableview2.TableView2?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="no.hal.wb.tables.CsvViewController">
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets top="0" bottom="10" left="0" right="0"/>
        </padding>
        <TextField fx:id="uriText" promptText="URL or path to local folder with csv" HBox.hgrow="ALWAYS"/>
        <Button fx:id="loadCsvAction" text="Load csv" onAction="#loadCsv"/>
        <Pane minWidth="10"/>
        <Button text="File..." onAction="#browseCsvFile"/>
    </HBox>
    <TableView2 fx:id="tableView" VBox.vgrow="ALWAYS"/>
</VBox>
